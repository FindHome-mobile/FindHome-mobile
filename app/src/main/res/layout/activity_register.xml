<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Curved Top Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_curved_top_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créer"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="un compte"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Nom et Prénom"
                android:inputType="textPersonName"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="email@test.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="••••••••••••"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Type Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_type"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input_field">

                <AutoCompleteTextView
                    android:id="@+id/et_type"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Type (client ou proprietaire)"
                    android:inputType="text"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Field - Always Visible -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_phone"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input_field">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Téléphone (+216...)"
                    android:inputType="phone"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location Field - Always Visible -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localisation"
                android:textSize="14sp"
                android:textColor="@color/md_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_location"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_input_field">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Gouvernorat / Ville"
                    android:inputType="text"
                    android:completionThreshold="1"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Signup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="S'inscrire"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <!-- Login Link -->
            <TextView
                android:id="@+id/tv_login_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Déjà un compte ? Se connecter"
                android:textColor="@color/md_primary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="16dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
